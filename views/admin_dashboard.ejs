<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <div class="container">
            <div id="branding">
                <h1>Admin Dashboard</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <h2>All Generated Resumes</h2>
        <div class="resume-previews">
            <% resumes.forEach(resume => { %>
                <div class="resume-item">
                    <h3><%= resume.firstName %> <%= resume.lastName %></h3>
                    <iframe src="<%= resume.s3_url %>" width="100%" height="500px"></iframe>
                    <div class="comments">
                        <h4>Comments</h4>
                        <% resume.comments.forEach(comment => { %>
                            <div class="comment-item">
                                <p>
                                    <strong>Admin:</strong> <%= comment.comment %> 
                                    <em>(<%= comment.created_at %>)</em>
                                    <form action="/edit_comment" method="POST" style="display: inline;">
                                        <input type="hidden" name="comment_id" value="<%= comment.id %>">
                                        <input type="text" name="updated_comment" value="<%= comment.comment %>" required>
                                        <button type="submit">Edit</button>
                                    </form>
                                    <form action="/delete_comment" method="POST" style="display: inline;">
                                        <input type="hidden" name="comment_id" value="<%= comment.id %>">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</button>
                                    </form>
                                </p>
                            </div>
                        <% }) %>
                    </div>
                    <form action="/add_comment" method="POST">
                        <input type="hidden" name="resume_id" value="<%= resume.id %>">
                        <textarea name="comment" rows="3" placeholder="Add a comment..." required></textarea>
                        <button type="submit">Add Comment</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
