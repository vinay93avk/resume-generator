<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated Resume</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/resume_styles.css">
    <style>
        /* Times New Roman for specific elements */
        .times-new-roman {
            font-family: 'Times New Roman', Times, serif;
            font-size: 11px;
        }
        .resume-container {
            width: 100%;
            max-width: 210mm;
            margin: auto;
            overflow: hidden;
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1, h2, h3 {
            color: #35424a;
            margin-top: 0;
        }
        h2 {
            margin-bottom: 10px;
        }
        h3 {
            margin-top: 20px;
        }
        p {
            margin: 5px 0;
        }
        ul {
            padding-left: 20px;
        }
        ul li {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div id="branding">
                <h1>Resume Generator</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="resume-container">
        <h1><%= firstName %> <%= lastName %></h1>
        <p class="times-new-roman"><%= phone %> | <%= email %> | <a href="<%= linkedUrl %>" target="_blank"><%= linkedUrl %></a></p>
        <h2>Education</h2>
        <% education.forEach(function(edu) { %>
            <p><strong><%= edu.institution %></strong> | <%= edu.start_date %> - <%= edu.end_date %><br>
            <span class="times-new-roman"><%= edu.degree %></span></p>
        <% }); %>
        <h2>Experience</h2>
        <% experience.forEach(function(exp) { %>
            <p><strong><%= exp.role %></strong>, <%= exp.company_name %> | <%= exp.start_date %> - <%= exp.end_date %></p>
            <ul>
                <% (typeof exp.description === 'string' ? exp.description.split('; ') : exp.description).forEach(function(point) { %>
                    <li class="times-new-roman"><%= point %></li>
                <% }); %>
            </ul>
        <% }); %>
        <h2>Skills</h2>
        <ul>
            <% skills.forEach(function(skill) { %>
                <li class="times-new-roman"><%= skill.skill_name %> - <%= skill.proficiency_level %></li>
            <% }); %>
        </ul>
        <h2>Certificates</h2>
        <ul>
            <% certificates.forEach(function(cert) { %>
                <li class="times-new-roman">
                    <strong><%= cert.certificate_name %></strong> from <%= cert.issuing_organization %><br>
                    <em>Issue Date:</em> <%= cert.issue_date %>, <em>Expiration Date:</em> <%= cert.expiration_date %>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
