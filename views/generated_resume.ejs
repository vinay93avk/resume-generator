<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated Resume</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <div class="container">
            <div id="branding">
                <h1>Resume Generator</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <h1>Resume for <%= firstName %> <%= lastName %></h1>
        <p>Email: <%= email %></p>
        <p>Phone: <%= phone %></p>
        <h2>Education</h2>
        <p>Degree: <%= degree %></p>
        <p>Institution: <%= institution %></p>
        <p>Start Date: <%= startDate %></p>
        <p>End Date: <%= endDate %></p>
        <h2>Experience</h2>
        <p>Company Name: <%= company_name %></p>
        <p>Role: <%= role %></p>
        <p>Experience Start Date: <%= experience_start_date %></p>
        <p>Experience End Date: <%= experience_end_date %></p>
        <ul>
            <% description.forEach(function(point) { %>
                <li><%= point %></li>
            <% }); %>
        </ul>
        <h2>Skills</h2>
        <ul>
            <% skills.forEach(function(skill) { %>
                <li><%= skill.skill_name %>: <%= skill.proficiency_level %></li>
            <% }); %>
        </ul>
        <h2>Certificates</h2>
        <ul>
            <% certificates.forEach(function(cert) { %>
                <li>
                    <strong><%= cert.certificate_name %></strong> from <%= cert.issuing_organization %>
                    <br>Issued: <%= cert.issue_date %>
                    <% if (cert.expiration_date) { %>
                        <br>Expires: <%= cert.expiration_date %>
                    <% } %>
                </li>
            <% }); %>
        </ul>
        <% if (linkedUrl) { %>
            <h2>LinkedIn</h2>
            <p><a href="<%= linkedUrl %>"><%= linkedUrl %></a></p>
        <% } %>
    </div>
</body>
</html>
