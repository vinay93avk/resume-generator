<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Updated Resume</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/resume_styles.css">
</head>
<body>
    <% if (typeof pdf === 'undefined' || !pdf) { %>
    <header>
        <div class="container">
            <div id="branding">
                <h1>Resume Generator</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <% } %>
    <div class="resume-container">
        <h1><%= firstName %> <%= lastName %></h1>
        <p><%= phone %> | <%= email %> | <a href="<%= linkedUrl %>" target="_blank"><%= linkedUrl %></a></p>
        
        <form action="/update_resume/<%= resumeId %>" method="post">
            <h2>Education</h2>
            <% education.forEach(function(edu, index) { %>
                <div class="form-group">
                    <label>Institution:</label>
                    <input type="text" name="education[<%= index %>][institution]" value="<%= edu.institution %>" required>
                    <label>Degree:</label>
                    <input type="text" name="education[<%= index %>][degree]" value="<%= edu.degree %>" required>
                    <label>Start Date:</label>
                    <input type="date" name="education[<%= index %>][start_date]" value="<%= edu.start_date %>" required>
                    <label>End Date:</label>
                    <input type="date" name="education[<%= index %>][end_date]" value="<%= edu.end_date %>">
                </div>
            <% }); %>
            
            <h2>Projects</h2>
            <% projects.forEach(function(project, index) { %>
                <div class="form-group">
                    <label>Project Name:</label>
                    <input type="text" name="projects[<%= index %>][project_name]" value="<%= project.project_name %>" required>
                    <label>GitHub Link:</label>
                    <input type="url" name="projects[<%= index %>][github_link]" value="<%= project.github_link %>">
                </div>
            <% }); %>
            
            <h2>Experience</h2>
            <% experience.forEach(function(exp, index) { %>
                <div class="form-group">
                    <label>Company Name:</label>
                    <input type="text" name="experience[<%= index %>][company_name]" value="<%= exp.company_name %>" required>
                    <label>Role:</label>
                    <input type="text" name="experience[<%= index %>][role]" value="<%= exp.role %>" required>
                    <label>Start Date:</label>
                    <input type="date" name="experience[<%= index %>][start_date]" value="<%= exp.start_date %>" required>
                    <label>End Date:</label>
                    <input type="date" name="experience[<%= index %>][end_date]" value="<%= exp.end_date %>">
                    <label>Description:</label>
                    <textarea name="experience[<%= index %>][description]" rows="4"><%= exp.description %></textarea>
                </div>
            <% }); %>
            
            <h2>Skills</h2>
            <ul>
                <% skills.forEach(function(skill, index) { %>
                    <li>
                        <input type="text" name="skills[<%= index %>][skill_name]" value="<%= skill.skill_name %>" required>
                        <input type="text" name="skills[<%= index %>][proficiency_level]" value="<%= skill.proficiency_level %>" required>
                    </li>
                <% }); %>
            </ul>
            
            <h2>Certificates</h2>
            <% certificates.forEach(function(cert, index) { %>
                <div class="form-group">
                    <label>Certificate Name:</label>
                    <input type="text" name="certificates[<%= index %>][certificate_name]" value="<%= cert.certificate_name %>" required>
                    <label>Issuing Organization:</label>
                    <input type="text" name="certificates[<%= index %>][issuing_organization]" value="<%= cert.issuing_organization %>" required>
                    <label>Issue Date:</label>
                    <input type="date" name="certificates[<%= index %>][issue_date]" value="<%= cert.issue_date %>">
                    <label>Expiration Date:</label>
                    <input type="date" name="certificates[<%= index %>][expiration_date]" value="<%= cert.expiration_date %>">
                </div>
            <% }); %>

            <div class="actions">
                <button type="submit" class="btn save-btn">Save Changes</button>
            </div>
        </form>

        <% if (typeof pdf === 'undefined' || !pdf) { %>
        <a href="<%= downloadUrl %>" class="download-btn">Download PDF</a>
        <div class="actions">
            <form action="/edit_resume/<%= resumeId %>" method="get">
                <button type="submit" class="btn edit-btn">Edit Resume</button>
            </form>
            <form action="/delete_resume/<%= resumeId %>" method="post" onsubmit="return confirm('Are you sure you want to delete this resume?');">
                <button type="submit" class="btn delete-btn">Delete Resume</button>
            </form>
        </div>
        <% } %>
    </div>
</body>
</html>
